
@{
    ViewBag.Title = "Order List";
}

<h2>Order TechTask Operations</h2>

<a class="btn btn-default" style="margin-bottom:10px"><i class="fa-regular fa-square-plus"></i>ADD New Order</a>
<a class="btn btn-default" style="margin-bottom:10px"><i class="fa-regular fa-square-plus"></i>ADD Customer</a>
<a class="btn btn-default" style="margin-bottom:10px"><i class="fa-regular fa-square-plus"></i>ADD Product</a>


<table id="orderTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Adress</th>
            <th>Total Price</th>
            <th>Order Status</th>
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<head>
    <!--load all Font Awesome styles -->
    <link href="path_to_css_files/all.css" rel="stylesheet">
</head>
<body>
    <i class="fas fa-user"></i> <!-- uses solid style -->
    <i class="far fa-user"></i> <!-- uses regular style -->
    <i class="fab fa-github-square"></i> <!-- uses brands style -->
</body>

@section scripts{
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#orderTable").DataTable({
                "ajax": {
                    "url": "/Order/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "colums": [
                    { "data": "Order ID" },
                    { "data": "Customer ID" },
                    { "data": "Customer Name" },
                    { "data": "Customer Adress" },
                    { "data": "Total Price" },
                    { "data": "Order Status" },
                ]
            })
        })
    </script>
}


